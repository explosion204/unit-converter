<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DataFragment">

    <TextView

        android:id="@+id/initialVal"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/text_view_border"
        android:text="2.2"
        android:textAlignment="center"
        android:textSize="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/initialUnit"
        app:layout_constraintRight_toLeftOf="@+id/convertedVal">

    </TextView>

    <TextView
        android:id="@+id/convertedVal"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/text_view_border"
        android:text="1.10000000"
        android:textAlignment="center"
        android:textSize="30dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/convertedUnit"
        app:layout_constraintLeft_toRightOf="@id/initialVal">
    </TextView>

    <Spinner
        android:id="@+id/initialUnit"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/initialVal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/convertedUnit">
    </Spinner>

    <Spinner
        android:id="@+id/convertedUnit"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/convertedVal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/initialVal"
        app:layout_constraintRight_toRightOf="parent">
    </Spinner>


</androidx.constraintlayout.widget.ConstraintLayout>